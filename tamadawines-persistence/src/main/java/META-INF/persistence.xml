<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <class>ro.tamadawines.persistence.model.Address</class>
        <class>ro.tamadawines.persistence.model.User</class>
        <class>ro.tamadawines.persistence.model.Product</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/tamadawines"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username"/>
            <property name="hibernate.connection.password"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>
